{
  "editor.fontFamily": "'Fira Code', Menlo, 'Courier New', monospace",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.guides.bracketPairs": "active",
  "editor.bracketPairColorization.enabled": true,
  "editor.inlineSuggest.enabled": true,
  "editor.renderWhitespace": "boundary",
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.formatOnSave": true,
  "editor.fontSize": 14,
  "editor.suggestSelection": "first",
  "editor.suggest.showStatusBar": true,
  "editor.semanticHighlighting.enabled": false,
  "editor.minimap.enabled": false,
  "editor.tabSize": 2,
  "editor.linkedEditing": true,
  "editor.defaultFormatter": "ms-vscode.cpptools",
  "eslint.format.enable": true,
  /* THEME CUSTOMIZATION */
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.colorTheme": "One Dark Pro Darker",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 10,
  "workbench.editor.limit.value": 5,
  "workbench.editor.decorations.colors": false,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.expandMode": "singleClick",
  "workbench.list.smoothScrolling": true,
  "workbench.colorCustomizations": {
    "terminal.background": "#111518",
    "terminalCursor.background": "#278327",
    "terminalCursor.foreground": "#1b8d1b",
    "terminal.selectionBackground": "#3a5339",
    "statusBar.background": "#121618",
    "statusBar.noFolderBackground": "#161616",
    "statusBar.debuggingBackground": "#263238",
    "activityBar.activeBorder": "#145a14",
    "activityBar.background": "#111518",
    "list.hoverBackground": "#1f4b1f",
    "tab.activeBackground": "#111518",
    "tab.activeBorder": "#111518",
  },
  /* WINDOW */
  "window.dialogStyle": "custom",
  "window.nativeTabs": true,
  "window.titleBarStyle": "custom",
  "window.commandCenter": true,
  "breadcrumbs.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  /* FOLDER HIERARCHY */
  "explorer.openEditors.sortOrder": "alphabetical",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  /* TERMINAL CONFIG */
  "terminal.external.osxExec": "iTerm.app",
  "terminal.external.linuxExec": "iTerm.app",
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.fontWeight": "350",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "'MesloLGS NF'",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.scrollback": 2000,
  "terminal.integrated.macOptionIsMeta": true,
  "debug.showInStatusBar": "never",
  "debug.terminal.clearBeforeReusing": true,
  /* ERRORLENS_EXTENSION */
  "errorLens.gutterIconsEnabled": true,
  "errorLens.statusBarMessageEnabled": false,
  "errorLens.statusBarColorsEnabled": false,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "extensions.ignoreRecommendations": true,
  /* C_CPP_EXTENSION */
  "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": false,
  "C_Cpp.intelliSenseUpdateDelay": 500,
  "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.clang_format_path": "/opt/homebrew/opt/llvm/bin/clang-format",
  "C_Cpp.experimentalFeatures": "Enabled",
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: LLVM, UseTab: Never, IndentWidth: 2, TabWidth: 4, BreakBeforeBraces: Attach, AllowShortIfStatementsOnASingleLine: false, IndentCaseLabels: false, ColumnLimit: 0, AccessModifierOffset: -4 }",
  "cmake.statusbar.advanced": {
    "debug": {
      "visibility": "icon"
    },
  },
  "cmake.configureOnOpen": true,
  "cmake.statusbar.visibility": "compact",
  "settingsSync.ignoredSettings": [
    "cmake.statusbar.visibility"
  ],
  "[cmake]": {
    "editor.defaultFormatter": "josetr.cmake-language-support-vscode"
  },
  /* ICONS */
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.folders.color": "#7cb342",
  "material-icon-theme.opacity": 1,
  "material-icon-theme.saturation": 1,
  "material-icon-theme.hidesExplorerArrows": false,
  "material-icon-theme.showUpdateMessage": false,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": true,
  "files.associations": {
    "*.cpp": "cpp",
    "*.ng.html": "html",
    "*.in": "cpp",
    "string_view": "cpp",
    "int32_t": "cpp",
  },
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": true,
    "cpp": true,
    "cmake": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "tabnine.experimentalAutoImports": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "python.terminal.executeInFileDir": true,
}
